@model List<TraversalCoreProje.Areas.Admin.Models.VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>API Visitor List</h1>

<table class="table table-bordered"> 
    <tr> 
        <th>#</th>
        <th>Name</th>
        <th>Surname</th>
        <th>City</th>
        <th>Country</th>
        <th>Mail</th>
        <th>Delete </th>
        <th>Update</th>
    </tr> 
    @foreach (var item in Model)
    {
        <tr> 
            <td>@item.VisitorId</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Mail</td>
            <td><a href="/Admin/VisitorApı/DeleteVisitor/@item.VisitorId" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Admin/VisitorApı/UpdateVisito/@item.VisitorId" class="btn btn-outline-danger">Update</a></td>
        </tr>
    }
</table>
<a href="/Admin/VisitorApı/AddVisitor/" class="btn btn-outline-primary">New Visitor Login</a> 