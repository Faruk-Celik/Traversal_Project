@model List<DTOLayer.DTOs.AnnouncementDTOs.AnnouncementListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Announcement List</h1>

<table class="table table-bordered"> 
    <tr> 
        <th>#</th>
        <th>Title</th>
        <th>Content</th>
        <th>Details</th>
    </tr> 
     @foreach (var item in Model)
    {
        <tr> 
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Countent</td>
            <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.Id" class="btn btn-outline-dark">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-outline-info"> Create Announcement</a>
