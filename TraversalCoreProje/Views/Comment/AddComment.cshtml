@if (User.Identity.IsAuthenticated)
{
    <div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Comment</h4>
    <p class="mb-4">
            Put your thoughts into words.
    </p> 

    <form method="post" asp-action="AddComment" asp-controller="Comment">
        <input type="hidden" name="DestinationId" value="@ViewBag.desId" /> 
        <input type="hidden" name="AppUserId" value="@ViewBag.userıd" />
        <div class="form-group">
                <textarea name="CommentContent" class="form-control" placeholder="Your Comment*" required=""
                      spellcheck="false"></textarea>
        </div> 
        <div class="submit text-right"> 
            <button class="btn btn-style  btn-primary" type="submit" id="btnsave">Add Comment</button>
        </div>
    </form>
</div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
} 
else
{
    <h2>Please Log In to Comment.</h2>
}