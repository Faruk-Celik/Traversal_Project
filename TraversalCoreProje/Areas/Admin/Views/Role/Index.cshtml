@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rol List</h1>
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Rol Name</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>


        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-danger">Update</a></td>
            </tr>
        }

    </table>
}
else
{
    <div class="alert alert-success">
        <span>No Roles Found!</span>

    </div>
   
}
<a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Add Role</a>

