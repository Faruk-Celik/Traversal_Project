@model TraversalCoreProje.Areas.Admin.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Mail Send</h1>

<form method="post"> 
    <div class="form-group"> 
        @Html.Label("Receiver Mail Address")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div> 
    <br />
    <div class="form-group">
        @Html.Label("Subject")
        <input type="text" asp-for="Subject" class="form-control" />
    </div> 
    <br /> 
    <button class="btn btn-outline-primary">Send Mail</button>
</form>