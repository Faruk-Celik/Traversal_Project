@using EntityLayer.Concrete
@model List<Destination> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tour Routes</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>City</th>
        <th>Price</th>
        <th>Capacity</th>
        <th>Show in Site</th>
        <th>Delete</th>
        <th>Update</th>
      
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DestinationId</td>
            <td>@item.City</td>
            <td>@item.Price</td>
            <td>@item.Capacity</td>
            <td><a href="/Destination/DestinationDetails/@item.DestinationId" class="btn btn-outline-info">Show in Site</a></td>
            <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationId" class="btn btn-outline-info">Delete</a></td>
            <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationId" class="btn btn-outline-info">Update</a></td>
        
        </tr>
    }
</table>
<a href="/Admin/Destination/AddDestination/" class="btn btn-outline-primary">Add New Route</a>