@using EntityLayer.Concrete 
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_UserLayout.cshtml";
}

<h1>Our Active Tour Routes</h1>
<table class="table table-bordered">
    <tr> 
        <th>#</th>
        <th>City</th>
        <th>Time</th>
        <th>Capacity</th>
        <th>Price</th>
    </tr> 
    @foreach (var item in Model)
    {
        <tr> 
            <td>@item.DestinationId</td>
            <td>@item.City</td>
            <td>@item.DayNight</td>
            <td>@item.Capacity</td>
            <td>@item.Price₺</td> 
            <td><a href="#"class="btn btn-outline-dark">Details</a></td>
        </tr>
    }
</table>

